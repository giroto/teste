\#{link_to 'All games', games_path} >

%p
  %strong Name:
  = @game.name
  - if can? :update, @game
    = link_to '(edit)', edit_game_path(@game)
  %br/

  %h1 Levels
  %table
    %thead
      %tr
        %th{ width:100 } Name
        %th{ width:100 }
        %th{ width:100 }
    %tbody
      - @game.levels.each do |level|
        %tr
          %td= link_to level.name, [@game, level]
          %td= link_to '(stats)', level_stats_path(level)
          - if can? :update, level
            %td= link_to t('crud.edit'), edit_game_level_path(@game, level)
          - if can? :destroy, level
            %td= link_to t('crud.destroy'), [@game, level], method: :delete, data: { confirm: t('crud.confirm') }
  %br/
  - if can? :create, Level
    = link_to t('crud.new_model', model: Level.model_name.human), new_game_level_path(@game)
  %br/


